            <!-- Top Bar End -->

						<div class="container">
							<div class="jumbotron">
								<img class="p-2" src="/images/gotv-removebg-preview.png">
							  <form method="get" action="/tvSubConfirmation">
								  <div class="form-row">
									<div class="form-group col-md-6">
									  	<label for="inputEmail4">Bouquet</label>
										<select class="form-select" aria-label="Default select example" id="bouquet" required>
										  <option selected>Select Bouquet</option>
											<option value="" selected="selected">Please Select bouquet</option>
											<option value="1,640">GOtv Jinja &#8358;1,640</option>
											<option value="2,460">GOtv Jolli &#8358;2,460</option>
											<option value="3,600">GOtv Max &#8358;3,600</option>
											<option value="800">GOtv Smallie - monthly &#8358;800</option>
											<option value="2,100">GOtv Smallie - quarterly &#8358;2,100</option>
											<option value="6,200">GOtv Smallie - yearly &#8358;6,200</option>
										</select>
									</div>
									<div class="form-group col-md-6">
									  <label for="cardNumber">GoTv IUC Number</label>
									  <input type="text" class="form-control" id="cardNumber" placeholder="Enter GoTv IUC Number" required>
									</div>
								  </div>
								  <div class="form-row">
									<div class="form-group col-md-6">
									  <label for="phoneNumber">Phone Number</label>
									  <input type="text" class="form-control" id="phoneNumber" placeholder="Phone Number" required>
									</div>
									<div class="form-group col-md-6">
									  <label for="inputEmail">Email</label>
									  <input type="email" class="form-control" id="inputEmail" placeholder="Email" required>
									</div>
								  </div>
								  <div class="form-row">
									<div class="form-group col-md-6">
										<label for="amountPaid">Amount(Naira)</label>
									  <input type="text" class="form-control" id="amountPaid" placeholder="Enter Amount" required>
									</div>
								  </div>
								  <button type="submit" class="btn btn-primary" onclick="getDataTvSubscription">Continue</button>
								<button type="submit" class="btn btn-primary">Cancel</button>
								</form>
							</div>
						</div> <!-- container -->
					<div>
				</div>
			</div>
        </div>
	<!-- Content End -->
		<script type="text/javascript">
			var select = document.getElementById("bouquet");
			var input = document.getElementById("amountPaid");
			select.onchange = function(){
				input.value = this.value;
			}
		</script>
