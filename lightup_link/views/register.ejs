    </head>

    <body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
		  	<div class="container">
				<!-- <a class="navbar-brand" href="https://lightup-link.run-eu-central1.goorm.io/"><img src="/images/lightup link logo-150_x_75.png"></a> -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			  		<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
			  		<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
				  			<a class="nav-link" aria-current="page" href="https://lightup-link.run-eu-central1.goorm.io/">Home</a>
						</li>
						<li class="nav-item">
				  			<a class="nav-link" href="https://lightup-link.run-eu-central1.goorm.io/pay-bills">Pay Bills</a>
						</li>
			  		</ul>
					<ul class="d-flex navbar-nav">
						<li class="nav-item">
				  			<a class="nav-link" href="https://lightup-link.run-eu-central1.goorm.io/contact" tabindex="-1">Contacts</a>
						</li>
						<li class="nav-item">
				  			<a class="nav-link" href="https://lightup-link.run-eu-central1.goorm.io/about" tabindex="-1" aria-disabled="true">About Us</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<img id="logo" class="py-5" src="/images/image-removebg-preview.png">
		<div class="row mt-4">
			<div class="col-lg-4">
			</div>
			<div class="col-lg-4 fs-6">
				<p class="text-light text-center">
					Kindly register an account
				</p>s
				<p class="text-light text-center">
					<%= messages %>
				</p>
				<div class="container border border-light bg-light rounded-2">
					<div class="text-center my-4">
						<h3>
							Sign Up
						</h3>
					</div>
					<form action="/register" method="POST">
						<div class="mb-3">
							<label for="floatingInput">Email</label>
							<input type="email" class="form-control" id="floatingInput" placeholder="Your Email" name="email">
						</div>
						<div class="mb-3">
							<label for="floatingInput">Username</label>
							<input type="text" class="form-control" id="floatingInput" placeholder="Your Username" name="username">
						</div>
						<div class="mb-3">
							<label for="floatingPassword">Password</label>
							<input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
						</div>
						<div class="form-check form-switch mb-3">
							<label class="form-check-label" for="flexSwitchCheckDefault">I accept the <a href="#offcanvasWithBothOptions" data-bs-toggle="offcanvas" role="button" aria-controls="offcanvasWithBothOptions">Terms and Conditions</a></label>
							<input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
						</div>
						<div class="col-12 text-center">
							<button type="submit" class="btn btn-primary py-1 px-5">Register</button>
						</div>
						<div class="col-12 mt-2 mb-4">
							<a class="text-secondary fontIncr" href="#">Forgot Password</a>
						</div>
					</form>	
				</div>
				<div class="text-secondary text-center mt-3">
					<p>
						Already have an account? <a class="text-secondary fontIncr" href="https://lightup-link.run-eu-central1.goorm.io/login"> Sign In</a>
					</p>
				</div>
			</div>
			<div class="col-lg-4">
			</div>
		</div>

		<%- include("partials/footerTwo") %>
		
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
	</body>
</html>